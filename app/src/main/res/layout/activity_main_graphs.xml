<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_view_graphs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context="com.kaustubh.rubrics.MainGraphs">

    <TextView
        android:text="MANAGE GRAPHS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView84"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:text="SIMPLE XY PLOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/barplot1"
        android:layout_marginTop="44dp"
        android:id="@+id/sxy"
        android:layout_alignRight="@+id/barplot1"
        android:layout_alignEnd="@+id/barplot1"
        android:layout_alignLeft="@+id/barplot1"
        android:layout_alignStart="@+id/barplot1" />

    <Button
        android:text="SCATTER PLOT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scatter"
        android:layout_below="@+id/sxy"
        android:layout_alignLeft="@+id/sxy"
        android:layout_alignStart="@+id/sxy"
        android:layout_marginTop="45dp"
        android:layout_alignRight="@+id/sxy"
        android:layout_alignEnd="@+id/sxy" />

    <Button
        android:text="THRESHOLD MARKS ANALYSIS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:id="@+id/bubble1"
        android:layout_below="@+id/textView84"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="TOTAL MARKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/barplot1"
        android:layout_below="@+id/bubble1"
        android:layout_alignLeft="@+id/bubble1"
        android:layout_alignStart="@+id/bubble1"
        android:layout_alignRight="@+id/bubble1"
        android:layout_alignEnd="@+id/bubble1" />
</RelativeLayout>
