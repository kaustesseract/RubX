<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaustubh.rubrics.ViewAccount"
    android:textAlignment="center">

    <TextView
        android:text="MY ACCOUNT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView65"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView66"
        android:hint="username"
        android:id="@+id/user"
        android:layout_alignTop="@+id/textView66"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView66"
        android:layout_toEndOf="@+id/textView66"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:text="USERNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/textView66"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@+id/textView65"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="email@xyz.com"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/email"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView66"
        android:layout_toEndOf="@+id/textView66"
        android:layout_alignTop="@+id/textView70"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:text="DOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView74"
        android:id="@+id/dob"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView74"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:text="LOGOUT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signout"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView74"
        android:layout_toEndOf="@+id/textView74" />

    <Button
        android:text="EDIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt"
        android:layout_alignBaseline="@+id/signout"
        android:layout_alignBottom="@+id/signout"
        android:layout_alignRight="@+id/textView65"
        android:layout_alignEnd="@+id/textView65" />

    <TextView
        android:text="DOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView74"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_above="@+id/signout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <TextView
        android:text="EMAIL ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView70"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginBottom="78dp"
        android:layout_above="@+id/textView74"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
