<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bbk"
    tools:context="com.kaustubh.rubrics.Showclass">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:minWidth="500dp"
      android:minHeight="300dp"
      android:textSize="20sp"
      android:lineSpacingExtra="5dp"
      android:id="@+id/ru"
      android:textColor="#ffffff" />

  <TextView
      android:layout_width="90dp"
      android:layout_height="wrap_content"
      android:text="STUDENT NAME"
      android:id="@+id/textView32"
      android:typeface="monospace"
      android:textSize="25sp"
      android:enabled="true"
      android:layout_alignTop="@+id/ru"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_toLeftOf="@+id/textView33"
      android:layout_toStartOf="@+id/textView33"
      android:textColor="#ffffff" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="EMAIL"
      android:typeface="monospace"
      android:id="@+id/textView33"
      android:layout_alignTop="@+id/ru"
      android:layout_centerHorizontal="true"
      android:layout_alignBottom="@+id/textView32"
      android:textSize="25sp"
      android:textColor="#ffffff" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="ROLL NO."
      android:typeface="monospace"
      android:id="@+id/textView34"
      android:layout_alignRight="@+id/ru"
      android:layout_alignEnd="@+id/ru"
      android:layout_alignTop="@+id/ru"
      android:layout_alignBottom="@+id/textView33"
      android:textSize="25sp"
      android:lineSpacingExtra="70dp"
      android:textColor="#ffffff" />
</RelativeLayout>
</ScrollView>
