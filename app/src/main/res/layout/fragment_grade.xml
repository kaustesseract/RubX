<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaustubh.rubrics.GradeFragment"
    android:background="@drawable/img">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:text="GRADE STUDENTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grade"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:textSize="24sp" />

    <Button
        android:text="VIEW GRADES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/grade"
        android:layout_alignStart="@+id/grade"
        android:layout_alignRight="@+id/grade"
        android:layout_alignEnd="@+id/grade"
        android:textSize="24sp" />
</RelativeLayout>
